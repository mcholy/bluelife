{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "MessageBroker": {
    "Host": "amqp://bluelife-queue:5672",
    "Username": "guest",
    "Password": "guest"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=bluelife;Port=3306;User=root;Password=guest;",
    "MongoDBConnection": "mongodb://admin:password@localhost:27017"
  },
  "Outbox": {
    "IntervalInSeconds": 10,
    "BatchSize": 50,
    "RetryThereshold": 3
  },
  "JWtSettings": {
    "validIssuer": "BlueLifeAPI",
    "validAudience": "https://localhost:52683",
    "expires": 5,
    "secretKey": "ad3801fd-6d31-47c2-91dd-50576c835d3b"
  },
  "GeneralConstants": {
    "CorsPolicyName": "CorsPolicy",
    "ConnectionStringName": "DefaultConnection"
  },
  "NoSqlConstants": {
    "ConnectionStringName": "MongoDBConnection",
    "MongoDatabase": "bluelifedb"
  }
}
